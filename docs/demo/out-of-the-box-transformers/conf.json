{
   "processType":"ETL",
   "originAppLocationCode":"testing_etl_with_transformers",
   "etlRootDirectory":"/path/to/any/directory",
   "syncStageSchema":"etl_demo_stage_area",
   "srcConnInfo":{
      "dataBaseUserName":"",
      "dataBaseUserPassword":"",
      "connectionURI":"jdbc:mysql://localhost:3306/etl_demo_field_transformer_db?autoReconnect=true&useSSL=false&allowPublicKeyRetrieval=true",
      "driveClassName":"com.mysql.cj.jdbc.Driver"
   },
   "dstConnInfo":{
      "dataBaseUserName":"",
      "dataBaseUserPassword":"",
      "connectionURI":"jdbc:mysql://localhost:3306/etl_demo_field_transformer_db?autoReconnect=true&useSSL=false&allowPublicKeyRetrieval=true",
      "driveClassName":"com.mysql.cj.jdbc.Driver"
   },
   "params":{
      "year":"2024",
      "month":"08"
   },
   "operations":[
      {
         "operationType":"ETL",
         "processingBatch":1000,
         "dstType":"csv"
      }
   ],
   "etlItemConfiguration":[
      {
         "srcConf":{
            "tableName":"employer",
            "extraTableDataSource":[
               {
                  "tableName":"employer_work_info",
                  "joinExtraCondition":"year=@year and month=@month",
                  "joinType":"INNER"
               },
               {
                  "tableName":"salary_parameter",
                  "joinType":"INNER"
               }
            ],
            "extraObjectDataSource":[
               {
                  "name":"payslip_generator",
                  "objectFields":[
                     {
                        "name":"pos",
                        "dataType":"int",
                        "value":"@year*@month + @id",
                        "transformer":"org.openmrs.module.epts.etl.etl.processor.transformer.ArithmeticFieldTransformer"
                     },
                     {
                        "name":"full_month",
                        "value":"@year@month"
                     },
                     {
                        "name":"full_name",
                        "value":"(@full_name).toUpperCase()",
                        "transformer":"org.openmrs.module.epts.etl.etl.processor.transformer.StringTranformer"
                     },
                     {
                        "name":"salary",
                        "value":"@worked_days*@base",
                        "transformer":"org.openmrs.module.epts.etl.etl.processor.transformer.ArithmeticFieldTransformer"
                     }
                  ]
               }
            ]
         },
         "dstConf":{
            "tableName":"monthly_payslip"
         }
      }
   ]
}